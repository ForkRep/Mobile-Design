{
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
